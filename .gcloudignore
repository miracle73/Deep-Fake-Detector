cat > .gcloudignore << 'EOF'
# Git and IDE
.git/
.gitignore
.vscode/
.idea/
README.md

# Python cache
__pycache__/
*.pyc
*.pyo
.env
venv/
.venv/

# Large datasets - but NOT checkpoints!
/data/
/datasets/
/training_data/
*.mp4
*.avi
*.mov
*.zip

# OS files
.DS_Store
Thumbs.db

# Don't exclude checkpoints folder - we need the model!
# !checkpoints/new/
EOF